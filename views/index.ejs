					<!--菜单-->
					<ul class="nav navbar-nav">
						<li class="active">
							<a href="/">首页 <span class="sr-only">(current)</span></a>
						</li>
						<li>
							<a href="/user/<%=username%>">我的百舌</a>
						</li>
					</ul>
