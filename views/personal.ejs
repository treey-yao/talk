		<link href="/js/lib/toast/toast.css" rel="stylesheet">

		<link href="/css/personal.css" rel="stylesheet">

	</head>

	<body>
		<!--头部-->
		<nav class="navbar navbar-inverse navbar-fixed-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
		            <span class="sr-only">个人说说</span>
		            <span class="icon-bar"></span>
		            <span class="icon-bar"></span>
		            <span class="icon-bar"></span>
		          </button>
					<a class="navbar-brand" href="/">个人说说</a>
				</div>
				<div id="navbar" class="navbar-collapse collapse">

					<!--菜单-->
					<ul class="nav navbar-nav">
						<li>
							<a href="/">首页 <span class="sr-only">(current)</span></a>
						</li>
						<li>
							<a href="#">我的说说</a>
						</li>
					</ul>
					<ul class="nav navbar-nav navbar-right">
						<li>
							<a href="#">欢迎您 ！
								<%=username%>
							</a>
						</li>
						<li class="active">
							<a href="personal">个人资料</a>
						</li>
					</ul>

				</div>
				<!--/.navbar-collapse -->
			</div>
		</nav>

		<div class="container s-content">
			<div class="page-header">
				<h1>个人信息 <small> Personal Information</small></h1>
			</div>
			<!-- 内容 -->
			<!-- Example row of columns -->
			<form class="form-box">
				<div class="col-lg-6">
					<div class="preview-box-big">
						<img src="/avatar/mr.png" class="cropper img-responsive mr-img" />
					</div>

					<div class="file-box btn btn-default">
						上传文件
						<input id="file" class="h-file " name="image" value="" accept="image/*" multiple="" type="file">
					</div>
				</div>

				<div class="row col-lg-6">
					<div class="form-group">
						<label for="nickname">QQ</label>
						<input type="text" class="form-control" id="qqname" name="qqname" placeholder="QQ">
						<!--<label class="s-prompt-box">可以是中文 </label>-->
					</div>
					<div class="form-group">
						<label for="phone">手机号码</label>
						<input type="text" class="form-control" id="phone"  name="phone" placeholder="手机号码">
						<!--<label class="s-prompt-box"> 请输入6-21字母和数字组成密码</label>-->
					</div>

					<div class="form-group">
						<label for="email">邮箱</label>
						<input type="email" class="form-control" id="email" name="email" placeholder="邮箱">
					</div>
					<div class="form-group">
						<label for="sex">性别</label>
						<select class="form-control" id="sex" name="sex">
							<option>男</option>
							<option>女</option>
							<option>人妖</option>
							<option>妖人</option>
						</select>
					</div>

				</div>

				<div class="row col-lg-12 update-box">
					<!--<div class="alert alert-danger " role="alert" id="sj-error">...</div>
					<div class="alert alert-success " role="alert" id="sj-success">...</div>-->
					<a class="btn btn-default btn-success update-btn" id="sj-update-btn">修改</a>
				</div>

			</form>
		</div>
		<!-- /container -->
		<hr>

		<footer class="col-lg-12 text-center">
			<p>&copy; 2017 Personal, Inc.</p>
		</footer>
